<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_help_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="11dp"
        android:text="@string/bind_help_title_insert_sim"
        android:textColor="#ff333333"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/insert_sim_1"
        android:layout_width="158dp"
        android:layout_height="123dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/insert_sim_1"
        app:layout_constraintEnd_toStartOf="@+id/insert_sim_2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_help_title" />

    <ImageView
        android:id="@+id/insert_sim_2"
        android:layout_width="158dp"
        android:layout_height="123dp"
        android:layout_marginStart="13dp"
        android:src="@drawable/insert_sim_2"
        app:layout_constraintBottom_toBottomOf="@+id/insert_sim_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/insert_sim_1"
        app:layout_constraintTop_toTopOf="@+id/insert_sim_1" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="@string/bind_help_insert_sim_tips_1"
        android:textColor="#ff707070"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/insert_sim_1"
        app:layout_constraintStart_toStartOf="@+id/insert_sim_1"
        app:layout_constraintTop_toBottomOf="@+id/insert_sim_1" />

    <TextView
        android:id="@+id/tv_insert_sim_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="@string/bind_help_insert_sim_tips_2"
        android:textColor="#ff707070"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/insert_sim_2"
        app:layout_constraintStart_toStartOf="@+id/insert_sim_2"
        app:layout_constraintTop_toBottomOf="@+id/insert_sim_2" />

    <ImageView
        android:id="@+id/insert_sim_3"
        android:layout_width="158dp"
        android:layout_height="123dp"
        android:layout_marginTop="37dp"
        android:src="@drawable/insert_sim_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_insert_sim_2" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="@string/bind_help_insert_sim_tips_3"
        android:textColor="#ff707070"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/insert_sim_3"
        app:layout_constraintStart_toStartOf="@+id/insert_sim_3"
        app:layout_constraintTop_toBottomOf="@+id/insert_sim_3" />

</androidx.constraintlayout.widget.ConstraintLayout>