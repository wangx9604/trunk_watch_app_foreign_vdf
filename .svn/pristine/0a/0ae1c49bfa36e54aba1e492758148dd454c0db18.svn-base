<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_device_wifi_strength"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:src="@drawable/watch_wifi_2"/>

    <ImageView
        android:id="@+id/iv_device_wifi_free"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/iv_device_wifi_strength"
        android:layout_centerVertical="true"
        android:src="@drawable/watch_wifi_lock"/>

    <TextView
        android:id="@+id/tv_device_wifi_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/list_item_selector"
        android:layout_toStartOf="@+id/iv_device_wifi_free"
        android:layout_alignParentStart="true"
        android:maxLines="1"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="xiaomi"
        android:textColor="@color/black"
        android:textSize="@dimen/xiaomiMyTextSize1"/>
</RelativeLayout>