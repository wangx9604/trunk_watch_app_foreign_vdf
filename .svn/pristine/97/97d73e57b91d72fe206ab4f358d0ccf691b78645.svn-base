<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_help_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="11dp"
        android:text="@string/bind_help_title_battery"
        android:textColor="#ff333333"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/battery_1"
        android:layout_width="158dp"
        android:layout_height="123dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/battery_1"
        app:layout_constraintEnd_toStartOf="@+id/battery_2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_help_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="@string/battery_tips_1"
        android:textColor="#707070"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/battery_1"
        app:layout_constraintStart_toStartOf="@+id/battery_1"
        app:layout_constraintTop_toBottomOf="@+id/battery_1" />

    <com.xiaoxun.xun.views.GifView
        android:id="@+id/battery_2"
        android:layout_width="158dp"
        android:layout_height="123dp"
        android:layout_marginStart="14dp"
        app:gif="@drawable/battery_2"
        app:layout_constraintBottom_toBottomOf="@+id/battery_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/battery_1"
        app:layout_constraintTop_toTopOf="@+id/battery_1" />

    <ImageView
        android:id="@+id/iv_2"
        android:layout_width="158dp"
        android:layout_height="123dp"
        android:src="@drawable/gif_background_2"
        app:layout_constraintBottom_toBottomOf="@+id/battery_2"
        app:layout_constraintEnd_toEndOf="@+id/battery_2"
        app:layout_constraintStart_toStartOf="@+id/battery_2"
        app:layout_constraintTop_toTopOf="@+id/battery_2" />

    <TextView
        android:id="@+id/tv_battery_2_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="@string/red_light_flicker"
        android:textColor="#707070"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/iv_2"
        app:layout_constraintStart_toStartOf="@+id/iv_2"
        app:layout_constraintTop_toTopOf="@+id/iv_2" />

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="8dp"
        android:layout_height="25dp"
        android:scaleType="fitXY"
        android:src="@drawable/arrow_down"
        app:layout_constraintEnd_toEndOf="@+id/tv_battery_2_des"
        app:layout_constraintStart_toStartOf="@+id/tv_battery_2_des"
        app:layout_constraintTop_toBottomOf="@+id/tv_battery_2_des" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="@string/battery_tips_2"
        android:textColor="#707070"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/battery_2"
        app:layout_constraintStart_toStartOf="@+id/battery_2"
        app:layout_constraintTop_toBottomOf="@+id/battery_2" />

    <TextView
        android:id="@+id/tv_network_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="14dp"
        android:text="@string/bind_help_battery_tips"
        android:textColor="#ff707070"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/battery_1" />
</android.support.constraint.ConstraintLayout>