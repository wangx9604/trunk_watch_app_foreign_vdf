<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="38dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <RelativeLayout
                android:id="@+id/more_watch_image"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                >
                <ImageView
                    android:id="@+id/more_watch_head"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/peopletab_picbg_sel"/>
                <ImageView
                    android:id="@+id/more_watch_mask"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/peopletab_mask"/>
                </RelativeLayout>
            <TextView
                android:id="@+id/more_watch_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/more_watch_image"
                android:layout_marginLeft="6dp"
                android:textSize="14sp"
                android:textColor="@color/black_d9_000000"
                android:text="小宝贝"
                android:maxLines="1"
                android:ellipsize="end"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/more_watch_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/bg_color_orange"/>
    </RelativeLayout>
</RelativeLayout>