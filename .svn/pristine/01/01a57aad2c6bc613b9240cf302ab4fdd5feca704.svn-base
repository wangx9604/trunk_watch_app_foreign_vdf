<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/title"
        layout="@layout/activity_title" />

    <ListView
        android:id="@+id/relation_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/next_view"
        android:layout_below="@id/title"
        android:cacheColorHint="@color/transparent"
        android:divider="@drawable/list_item_divider"
        android:dividerHeight="1px"
        android:fadingEdge="none"
        android:footerDividersEnabled="true"
        android:scrollbars="none"></ListView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_above="@+id/next_view"
        android:src="@color/line_grey" />

    <RelativeLayout
        android:id="@+id/next_view"
        android:layout_width="match_parent"
        android:layout_height="86.66dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/next_step"
            android:layout_width="wrap_content"
            android:layout_height="39.33dp"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_security_next_selector"
            android:text="@string/security_zone_next"
            android:textSize="@dimen/MyTextSize2" />
    </RelativeLayout>
</RelativeLayout>
