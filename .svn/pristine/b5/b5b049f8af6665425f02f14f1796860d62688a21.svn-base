<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/device_setting_layout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:paddingEnd="@dimen/divideleftandright"
        android:paddingStart="@dimen/divideleftandright"
        android:background="@drawable/setting_item_selector">

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/color_12"
            android:textSize="@dimen/xiaomiMyTextNickname" />

        <TextView
            android:id="@+id/vertical_line"
            android:layout_width="1px"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@id/time"
            android:background="@color/txt_grey"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@id/vertical_line"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_12"
                android:textSize="@dimen/xiaomiMyTextSize5" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.66dp"
                android:textColor="@color/txt_grey"
                android:textSize="@dimen/xiaomiMyTextSize5" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/button_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:clickable="true"
            android:focusable="false" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:paddingEnd="@dimen/divideleftandright"
        android:paddingStart="@dimen/divideleftandright"
        android:layout_below="@id/device_setting_layout"
        android:src="@color/line_grey" />

</RelativeLayout>