<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".motion.activity.MotionRecordDetailActivity">
    <View
        android:id="@+id/title_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_title_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/schedule_back"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/title_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title_background" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/passport_background_light"
        android:text="@string/motion_detail"
        android:textSize="17sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/title_background"
        app:layout_constraintEnd_toEndOf="@+id/title_background"
        app:layout_constraintStart_toStartOf="@+id/title_background"
        app:layout_constraintTop_toTopOf="@+id/title_background" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/title_background"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_motion_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="28sp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tv_motion_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022/03/04 12:23"
                android:textSize="15sp"
                android:textColor="#868686"
                android:layout_marginTop="10dp"
                android:layout_marginStart="25dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_motion_name"
                app:layout_constraintStart_toStartOf="parent"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_bg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_motion_time"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cv_bg">
                <TextView
                    android:id="@+id/tv_value_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textColor="@color/black"
                    android:textSize="45sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_value_unit"
                    />

        <TextView
            android:id="@+id/tv_value_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unit_minute"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_value_0"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyc_prop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/layout_score"/>

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_trace_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="tv_motion_trace,cv_layout_trace"/>

            <TextView
                android:id="@+id/tv_motion_trace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/motion_record_hint_3"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyc_prop"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_layout_trace"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_motion_trace">
                <fragment
                    android:id="@+id/layout_map_fragment"
                    android:name="com.xiaoxun.xun.motion.activity.RecordMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="tv_motion_heart,chart_line_heart,
                                               cv_heart_0,tv_max_rate_0,tv_max_rate_1,
                                                tv_max_rate_2,cv_heart_1,tv_avg_rate_0,
                                               tv_avg_rate_1,tv_avg_rate_2,cv_heart_2,
                                                tv_min_rate_0,tv_min_rate_1,tv_min_rate_2"/>

            <TextView
                android:id="@+id/tv_motion_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/motion_record_hint_4"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_layout_trace"/>

            <com.github.mikephil.newcharting.charts.LineChart
                android:id="@+id/chart_line_heart"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_motion_heart"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_heart_0"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/health_report_card_bg"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/cv_heart_1"
                app:layout_constraintTop_toBottomOf="@+id/chart_line_heart"/>
            <TextView
                android:id="@+id/tv_max_rate_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/record_rate_0"
                android:textSize="15sp"
                android:textColor="@color/alipay_666666"
                android:layout_marginTop="11dp"
                android:layout_marginStart="11dp"
                app:layout_constraintStart_toStartOf="@+id/cv_heart_0"
                app:layout_constraintTop_toTopOf="@+id/cv_heart_0"/>
            <TextView
                android:id="@+id/tv_max_rate_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="11dp"
                app:layout_constraintStart_toStartOf="@+id/cv_heart_0"
                app:layout_constraintBottom_toBottomOf="@+id/cv_heart_0"/>
            <TextView
                android:id="@+id/tv_max_rate_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/heart_rate_warning_value"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="2dp"
                app:layout_constraintStart_toEndOf="@+id/tv_max_rate_1"
                app:layout_constraintBottom_toBottomOf="@+id/cv_heart_0"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_heart_1"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/health_report_card_bg"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toEndOf="@+id/cv_heart_0"
                app:layout_constraintEnd_toStartOf="@+id/cv_heart_2"
                app:layout_constraintTop_toBottomOf="@+id/chart_line_heart"/>

            <TextView
                android:id="@+id/tv_avg_rate_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/record_rate_1"
                android:textSize="15sp"
                android:textColor="@color/alipay_666666"
                android:layout_marginTop="11dp"
                android:layout_marginStart="11dp"
                app:layout_constraintStart_toStartOf="@+id/cv_heart_1"
                app:layout_constraintTop_toTopOf="@+id/cv_heart_1"/>
            <TextView
                android:id="@+id/tv_avg_rate_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="11dp"
                app:layout_constraintStart_toStartOf="@+id/cv_heart_1"
                app:layout_constraintBottom_toBottomOf="@+id/cv_heart_1"/>
            <TextView
                android:id="@+id/tv_avg_rate_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/heart_rate_warning_value"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="2dp"
                app:layout_constraintStart_toEndOf="@+id/tv_avg_rate_1"
                app:layout_constraintBottom_toBottomOf="@+id/cv_heart_1"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_heart_2"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="35dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/health_report_card_bg"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toEndOf="@+id/cv_heart_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chart_line_heart"/>

            <TextView
                android:id="@+id/tv_min_rate_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/record_rate_2"
                android:textSize="15sp"
                android:textColor="@color/alipay_666666"
                android:layout_marginTop="11dp"
                android:layout_marginStart="11dp"
                app:layout_constraintStart_toStartOf="@+id/cv_heart_2"
                app:layout_constraintTop_toTopOf="@+id/cv_heart_2"/>
            <TextView
                android:id="@+id/tv_min_rate_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="11dp"
                app:layout_constraintStart_toStartOf="@+id/cv_heart_2"
                app:layout_constraintBottom_toBottomOf="@+id/cv_heart_2"/>
            <TextView
                android:id="@+id/tv_min_rate_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/heart_rate_warning_value"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="2dp"
                app:layout_constraintStart_toEndOf="@+id/tv_min_rate_1"
                app:layout_constraintBottom_toBottomOf="@+id/cv_heart_2"/>

            <androidx.constraintlayout.widget.Group
                android:id="@+id/group_heart_zone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="tv_motion_zone,chart_bar_zone"/>
            <TextView
                android:id="@+id/tv_motion_zone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/motion_record_hint_5"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_heart_0"/>

            <com.github.mikephil.newcharting.charts.BarChart
                android:id="@+id/chart_bar_zone"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_motion_zone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@+id/chart_bar_zone"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>