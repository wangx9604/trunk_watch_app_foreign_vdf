<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/schedule_item_time"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="4dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="8dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/welcome_bg_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <RelativeLayout
        android:id="@+id/layout_week_select"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp">
        <TextView
            android:id="@+id/tv_week_num_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/week_6"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/schedule_week_select"
            android:layout_marginStart="4dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tv_week_num_select"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_delect_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/schedule_week_delete"
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/layout_week_select"
        app:layout_constraintBottom_toBottomOf="@+id/layout_week_select"/>
        
    <View
        android:id="@+id/iv_set_class_name"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="51dp"
        android:background="@color/bg_grey"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_schedule_week_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/schedule_week_set_name_title"
        android:textSize="15sp"
        android:textColor="@color/schedule_time_text_color"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_set_class_name"
        app:layout_constraintBottom_toBottomOf="@+id/iv_set_class_name"/>
    <TextView
        android:id="@+id/ed_schedule_week_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="@string/schedule_class_name_limit_0"
        android:textSize="15sp"
        android:gravity="end|center"
        android:background="@color/transparent"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_schedule_week_name_title"
        app:layout_constraintTop_toTopOf="@+id/iv_set_class_name"
        app:layout_constraintBottom_toBottomOf="@+id/iv_set_class_name"/>

    <View
        android:id="@+id/iv_set_class_time"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/bg_grey"
        app:layout_constraintTop_toBottomOf="@+id/iv_set_class_name"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv_schedule_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/schedule_time"
        android:textSize="15sp"
        android:textColor="@color/schedule_time_text_color"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_set_class_time"
        app:layout_constraintBottom_toBottomOf="@+id/iv_set_class_time"/>
    <TextView
        android:id="@+id/tv_start_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="08:00"
        android:textSize="16sp"
        android:textColor="@color/txt_coupon_color"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@+id/iv_set_class_time"
        app:layout_constraintBottom_toBottomOf="@+id/iv_set_class_time"
        app:layout_constraintRight_toLeftOf="@+id/divide_line"
        />
    <View
        android:id="@+id/divide_line"
        android:layout_width="15dp"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:background="@color/txt_coupon_color"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="@+id/iv_set_class_time"
        app:layout_constraintBottom_toBottomOf="@+id/iv_set_class_time"
        app:layout_constraintRight_toLeftOf="@+id/tv_end_info"
        />

    <TextView
        android:id="@+id/tv_end_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="08:40"
        android:textSize="16sp"
        android:textColor="@color/txt_coupon_color"
        android:layout_marginEnd="21dp"
        app:layout_constraintTop_toTopOf="@+id/iv_set_class_time"
        app:layout_constraintBottom_toBottomOf="@+id/iv_set_class_time"
        app:layout_constraintRight_toRightOf="parent"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_set_class_time"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>