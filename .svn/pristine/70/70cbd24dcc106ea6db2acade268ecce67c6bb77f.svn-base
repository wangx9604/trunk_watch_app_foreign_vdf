<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/schedule_item_time"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:orientation="vertical"
    app:cardCornerRadius="4dp"
    app:cardElevation="0dp"
    >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="54dp">


    <TextView
        android:id="@+id/tv_schedule_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/schedule_time_text_color"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/tv_start_info"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:background="@color/schedule_content_bg"
        android:gravity="center"
        android:text="08:00"
        android:textSize="16sp"
        android:textColor="@color/schedule_time_text_color"
        android:layout_marginStart="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <View
        android:id="@+id/divide_line"
        android:layout_width="15dp"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:background="#313131"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_end_info"
        app:layout_constraintLeft_toRightOf="@+id/tv_start_info"
       />

    <TextView
        android:id="@+id/tv_end_info"
        android:layout_width="86.4dp"
        android:layout_height="28.8dp"
        android:background="@color/schedule_content_bg"
        android:gravity="center"
        android:text="08:40"
        android:textSize="16sp"
        android:layout_marginEnd="21dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>