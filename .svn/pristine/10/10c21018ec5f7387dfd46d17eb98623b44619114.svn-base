<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xiaomi_bg_grey"
    android:orientation="vertical">

    <include
        android:id="@+id/silence_time_title"
        layout="@layout/activity_title" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/silence_time_title"
        android:layout_marginBottom="70dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="23.33dp"
                    android:layout_marginRight="23.33dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/setting_watch_silence"
                        android:textColor="@color/black"
                        android:textSize="@dimen/xiaomiMyTextSize12" />

                    <TextView
                        android:id="@+id/message_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/device_silence_message_detail_old"
                        android:textColor="@color/txt_grey"
                        android:textSize="@dimen/xiaomiMyTextSize13" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="23.33dp"
                android:layout_marginRight="23.33dp"
                android:background="@color/divider_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50.33dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="23.33dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/device_lesson_morning"
                        android:textColor="@color/black"
                        android:textSize="@dimen/xiaomiMyTextSize12" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="23.33dp"
                android:layout_marginRight="23.33dp"
                android:background="@color/divider_color" />

            <RelativeLayout
                android:id="@+id/morning_class_time"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/setting_item_selector"
                android:gravity="center">

                <TextView
                    android:id="@+id/start_end_time_morning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="23.33dp"
                    android:textColor="@color/color_12"
                    android:textSize="@dimen/xiaomiMyTextNickname" />

                <TextView
                    android:id="@+id/vertical_line_1"
                    android:layout_width="1px"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="6dp"
                    android:layout_toEndOf="@id/start_end_time_morning"
                    android:background="@color/txt_grey"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="6dp"
                    android:layout_toEndOf="@id/vertical_line_1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/week1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_12"
                        android:textSize="@dimen/xiaomiMyTextSize5" />

                    <TextView
                        android:id="@+id/status1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/txt_grey"
                        android:textSize="@dimen/xiaomiMyTextSize5" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/switch_morninig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="23.33dp"
                    android:background="#00000000"
                    android:focusable="false" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="23.33dp"
                android:layout_marginRight="23.33dp"
                android:background="@color/divider_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50.33dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="23.33dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/device_lesson_afternoon"
                        android:textColor="@color/black"
                        android:textSize="@dimen/xiaomiMyTextSize12" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="23.33dp"
                android:layout_marginRight="23.33dp"
                android:background="@color/divider_color" />

            <RelativeLayout
                android:id="@+id/afternoon_class_time"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/setting_item_selector"
                android:gravity="center">

                <TextView
                    android:id="@+id/start_end_time_afternoon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="23.33dp"
                    android:textColor="@color/color_12"
                    android:textSize="@dimen/xiaomiMyTextNickname" />

                <TextView
                    android:id="@+id/vertical_line2"
                    android:layout_width="1px"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="6dp"
                    android:layout_toEndOf="@id/start_end_time_afternoon"
                    android:background="@color/txt_grey"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="6dp"
                    android:layout_toEndOf="@id/vertical_line2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/week2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_12"
                        android:textSize="@dimen/xiaomiMyTextSize5" />

                    <TextView
                        android:id="@+id/status2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/txt_grey"
                        android:textSize="@dimen/xiaomiMyTextSize5" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/switch_afternoon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="23.33dp"
                    android:background="#00000000"
                    android:focusable="false" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="23.33dp"
                android:layout_marginEnd="23.33dp"
                android:background="@color/divider_color" />

            <RelativeLayout
                android:id="@+id/self_set"
                android:layout_width="match_parent"
                android:layout_height="50.33dp"
                android:gravity="center"
                android:visibility="invisible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="23.33dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/device_lesson_custom"
                        android:textColor="@color/black"
                        android:textSize="@dimen/xiaomiMyTextSize12" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:id="@+id/self_set_divide"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="23.33dp"
                android:layout_marginRight="23.33dp"
                android:background="@color/divider_color"
                android:visibility="invisible" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/silence_time_recyclerview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

            <View
                android:id="@+id/self_set_divide_bottom"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="23.33dp"
                android:layout_marginRight="23.33dp"
                android:background="@color/divider_color"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/buttom_add_view"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/iv_silence_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="false"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_alarm_add_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/string_add"
                android:textColor="@color/color_5"
                android:textSize="@dimen/xiaomiMyTextSize4" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/silence_time_title"
        android:clickable="false"/>
</RelativeLayout>
