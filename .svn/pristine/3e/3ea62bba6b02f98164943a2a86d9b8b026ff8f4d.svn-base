<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/view_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/motion_rect_record_start"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/view_0"
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:background="@color/line_grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/view_1"/>
    <View
        android:id="@+id/view_1"
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:background="@color/line_grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view_0"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>
    <TextView
        android:id="@+id/tv_vaule_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000"
        android:textSize="23dp"
        android:textStyle="bold"
        android:layout_marginBottom="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/view_0"
        app:layout_constraintBottom_toBottomOf="@+id/guide_0"/>

    <TextView
        android:id="@+id/tv_vaule_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000"
        android:textSize="23dp"
        android:textStyle="bold"
        android:layout_marginBottom="3dp"
        app:layout_constraintStart_toStartOf="@+id/view_0"
        app:layout_constraintEnd_toEndOf="@+id/view_1"
        app:layout_constraintBottom_toBottomOf="@+id/guide_0"/>

    <TextView
        android:id="@+id/tv_vaule_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000"
        android:textSize="23dp"
        android:textStyle="bold"
        android:layout_marginBottom="3dp"
        app:layout_constraintStart_toStartOf="@+id/view_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/guide_0"/>

    <TextView
        android:id="@+id/tv_hint_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/motion_record_hint_0"
        android:textSize="13dp"
        android:textStyle="bold"
        android:textColor="@color/line_grey"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/view_0"
        app:layout_constraintTop_toTopOf="@+id/guide_0"/>

    <TextView
        android:id="@+id/tv_hint_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/motion_record_hint_1"
        android:textSize="13dp"
        android:maxLines="1"
        android:maxLength="18"
        android:textStyle="bold"
        android:ellipsize="end"
        android:textColor="@color/line_grey"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/view_0"
        app:layout_constraintEnd_toEndOf="@+id/view_1"
        app:layout_constraintTop_toTopOf="@+id/guide_0"/>

    <TextView
        android:id="@+id/tv_hint_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/motion_record_hint_2"
        android:textSize="13dp"
        android:textStyle="bold"
        android:textColor="@color/line_grey"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/view_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guide_0"/>

</androidx.constraintlayout.widget.ConstraintLayout>