<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp">
        <View
            android:id="@+id/line_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_grey"
            />
        <TextView
            android:id="@+id/iv_repair_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/dark_grey"/>
        <TextView
            android:id="@+id/iv_repair_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_repair_name"
            android:layout_marginLeft="10dp"
            android:textSize="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/dark_grey"/>
        <com.xiaoxun.xun.views.HttpTextView
            android:id="@+id/iv_repair_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_repair_name"
            android:layout_toEndOf="@+id/iv_repair_no"
            android:textSize="14dp"
            android:textIsSelectable="true"
            android:autoLink="all"
            android:textColor="@color/bg_color_orange"/>
        <ImageView
            android:id="@+id/iv_repair_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_repair_subject"
            android:layout_marginTop="2dp"
            android:scaleType="fitXY"/>
    </RelativeLayout>
</RelativeLayout>
