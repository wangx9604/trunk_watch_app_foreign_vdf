<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="64dp"
	android:descendantFocusability="blocksDescendants" >
    <RelativeLayout
		android:background="@drawable/rectangle_shape_stroke"
		android:layout_centerVertical="true"
		android:layout_alignParentLeft="true"
		android:layout_marginLeft="11.5dp"
		android:layout_marginRight="11.5dp"
       	android:layout_width="wrap_content"
	    android:layout_height="match_parent" >
		<ImageView
			android:id="@+id/iv_head_icon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/sport_steps"
			android:layout_marginLeft="15dp"
			android:layout_centerVertical="true"/>
        <TextView
	        android:id="@+id/tv_hint1"
	        android:layout_width="120dp"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
			android:layout_toEndOf="@+id/iv_head_icon"
			android:gravity="left"
			android:text="111111111"
	        android:textSize="@dimen/xiaomiMyTextSize12"
			android:textColor="@color/black"
			android:layout_marginLeft="34.5dp"/>

		<TextView
			android:id="@+id/tv_hint2"
			android:layout_width="120dp"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:textSize="@dimen/xiaomiMyTextSize12"
			android:gravity="right"
			android:text="2222222"
			android:textColor="@color/black"
			android:layout_alignParentEnd="true"
			android:layout_marginRight="63dp"/>
    </RelativeLayout>
</RelativeLayout>