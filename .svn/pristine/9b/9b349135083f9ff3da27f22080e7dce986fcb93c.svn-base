<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_repair_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">
        <TextView
            android:id="@+id/tv_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/tv_track_status"/>

        <TextView
            android:id="@+id/tv_track_status"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:background="@color/bg_color_orange"/>
        <TextView
            android:id="@+id/tv_user_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_subject"
            android:layout_marginTop="2dp"
            android:text="@string/repair_use_desc"/>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_subject"
            android:layout_toEndOf="@+id/tv_user_desc"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/tv_staff_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_subject"
            android:layout_toEndOf="@+id/tv_user_name"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:text="@string/repair_staff_desc"/>

        <TextView
            android:id="@+id/tv_staff_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_subject"
            android:layout_toEndOf="@+id/tv_staff_desc"
            android:layout_marginTop="2dp"/>
        <TextView
            android:id="@+id/tv_update_time_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/tv_user_desc"
            android:text="@string/repair_update_at"/>
        <TextView
            android:id="@+id/tv_update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_user_desc"
            android:layout_toEndOf="@+id/tv_update_time_desc"
            android:layout_marginTop="2dp"/>
        <EditText
            android:id="@+id/repair_reply_content"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/tv_update_time"
            android:layout_marginTop="2dp"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:textSize="12dp"
            android:hint="@string/repair_reply_error"
            android:background="@drawable/inputbox_whitenum"/>
        <TextView
            android:id="@+id/tv_repair_photo"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/repair_reply_content"
            android:background="@color/line_grey"
            android:gravity="center"
            android:text="@string/repair_reply_photo"/>
        <TextView
            android:id="@+id/tv_repair_photo_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"
            android:layout_toEndOf="@+id/tv_repair_photo"
            android:layout_below="@+id/repair_reply_content"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/iv_clear_photo_list"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/tv_repair_photo_desc"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/fail_icon"
            android:visibility="gone"/>
        <Button
            android:id="@+id/bt_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/repair_reply_button"
            android:layout_below="@+id/tv_repair_photo_desc"
            android:layout_marginTop="4dp"
            android:background="@drawable/button_0"/>
        <TextView
            android:id="@+id/tv_repair_replay_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_reply"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
</LinearLayout>
