<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toStartOf="@+id/iv_repair_status"
        android:layout_centerVertical="true">
    <TextView
        android:id="@+id/iv_repair_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textColor="@color/dark_grey"/>
    <TextView
        android:id="@+id/iv_repair_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iv_repair_name"
        android:layout_marginLeft="10dp"
        android:textSize="10dp"
        android:textColor="@color/dark_grey"/>
        <TextView
            android:id="@+id/repair_flag_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/repair_flag_desc"
            android:layout_below="@+id/iv_repair_name"
            android:textColor="@color/bg_color_orange"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/repair_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_repair_name"
            android:layout_toEndOf="@+id/repair_flag_desc"
            android:textSize="14dp"
            android:text="#"
            android:layout_marginLeft="2dp"
            android:textColor="@color/bg_color_orange"/>
        <TextView
            android:id="@+id/iv_repair_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_repair_name"
            android:layout_toEndOf="@+id/repair_flag"
            android:textSize="14dp"
            android:textColor="@color/bg_color_orange"/>
        <TextView
            android:id="@+id/iv_repair_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_repair_name"
            android:layout_toEndOf="@+id/iv_repair_no"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/bg_color_orange"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/iv_repair_status"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="@color/bg_color_orange"/>

</RelativeLayout>
