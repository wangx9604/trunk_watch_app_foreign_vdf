<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey"
    android:fitsSystemWindows="true"
    tools:context="com.xiaoxun.xun.activitys.SportChallDetailActivity">
    <include
        android:id="@+id/title"
        layout="@layout/activity_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_all_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/bg_grey"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_chall_shared">
    <ImageView
        android:id="@+id/iv_chall_icon"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="112.5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_chall_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="20sp"
        android:layout_marginTop="113.5dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_chall_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv_chall_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="18.5dp"
        android:layout_marginLeft="68.5dp"
        android:layout_marginRight="68.5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_chall_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/tv_chall_shared"
        android:layout_width="345dp"
        android:layout_height="45dp"
        android:layout_marginBottom="17.8dp"
        android:background="@drawable/rectangle_shape_share"
        android:text="@string/share_title"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</android.support.constraint.ConstraintLayout>
