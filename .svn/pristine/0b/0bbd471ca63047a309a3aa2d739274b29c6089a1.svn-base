<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/schedule_class_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/CardView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardBackgroundColor="@color/schedule_class_bg"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                >
            <TextView
                android:id="@+id/tv_title_0"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="第一节"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/tv_title_1"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title_0"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:text="08:00-08:40"
                android:textSize="8sp"
                android:textColor="@color/txt_grey_button"/>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <View
        android:id="@+id/under_line_view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/shape_dash_line"
        android:layout_below="@+id/CardView"/>
</RelativeLayout>