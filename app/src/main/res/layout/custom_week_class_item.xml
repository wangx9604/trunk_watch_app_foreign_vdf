<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_0"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_weight="1"
        android:layout_margin="2dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/tv_show_info_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_13"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/tv_show_time_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_13"
                android:layout_below="@+id/tv_show_info_0"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_1"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_weight="1"
        android:layout_margin="2dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/tv_show_info_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_13"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/tv_show_time_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_13"
                android:layout_below="@+id/tv_show_info_1"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    
</LinearLayout>
