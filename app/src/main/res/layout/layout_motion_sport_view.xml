<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_layout_bg"
        android:layout_width="match_parent"
        android:layout_height="330.5dp"
        android:layout_margin="15dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_avg_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/motion_sport_hint"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="@+id/cv_layout_bg"
        app:layout_constraintStart_toStartOf="@+id/cv_layout_bg"
        app:layout_constraintEnd_toEndOf="@+id/cv_layout_bg"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_bottom_1"
        android:layout_width="147dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="15dp"
        android:background="#FFF9F9FC"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="@+id/cv_layout_bg"
        app:layout_constraintEnd_toStartOf="@+id/cv_bottom_2"
        app:layout_constraintBottom_toBottomOf="@+id/cv_layout_bg"/>
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="@+id/cv_bottom_1"
        app:layout_constraintBottom_toBottomOf="@+id/cv_bottom_1"/>
    <TextView
        android:id="@+id/tv_score_title_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/motion_high_score_title"
        android:textSize="15sp"
        android:textColor="@color/alipay_666666"
        app:layout_constraintStart_toStartOf="@+id/cv_bottom_1"
        app:layout_constraintEnd_toEndOf="@+id/cv_bottom_1"
        app:layout_constraintBottom_toTopOf="@+id/view_line"/>
    <TextView
        android:id="@+id/tv_score_value_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/cv_bottom_1"
        app:layout_constraintEnd_toEndOf="@+id/cv_bottom_1"
        app:layout_constraintTop_toBottomOf="@+id/view_line"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_bottom_2"
        android:layout_width="147dp"
        android:layout_height="75dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:background="#FFF9F9FC"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="@+id/cv_layout_bg"
        app:layout_constraintStart_toEndOf="@+id/cv_bottom_1"
        app:layout_constraintBottom_toBottomOf="@+id/cv_layout_bg"/>

    <TextView
        android:id="@+id/tv_score_title_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/motion_avg_score_title"
        android:textSize="15sp"
        android:textColor="@color/alipay_666666"
        app:layout_constraintStart_toStartOf="@+id/cv_bottom_2"
        app:layout_constraintEnd_toEndOf="@+id/cv_bottom_2"
        app:layout_constraintBottom_toTopOf="@+id/view_line"/>
    <TextView
        android:id="@+id/tv_score_value_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/cv_bottom_2"
        app:layout_constraintEnd_toEndOf="@+id/cv_bottom_2"
        app:layout_constraintTop_toBottomOf="@+id/view_line"/>

    <com.github.mikephil.newcharting.charts.BarChart
        android:id="@+id/bar_chare_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintStart_toStartOf="@+id/cv_layout_bg"
        app:layout_constraintEnd_toEndOf="@+id/cv_layout_bg"
        app:layout_constraintTop_toBottomOf="@+id/tv_avg_info"
        app:layout_constraintBottom_toTopOf="@+id/cv_bottom_1"/>

</androidx.constraintlayout.widget.ConstraintLayout>