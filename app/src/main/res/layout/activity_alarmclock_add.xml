<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xiaomi_bg_grey"
    android:orientation="vertical">

    <include
        android:id="@+id/alarmclock_add_title"
        layout="@layout/activity_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/alarmclock_add_title"
        android:background="@color/xiaomi_bg_grey"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/alarm_reset"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/setting_item_selector"
            android:clickable="true"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="23.33dp"
                android:layout_toLeftOf="@+id/iv_alarm_reset_next"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/device_alarm_reset"
                    android:textColor="@color/black"
                    android:textSize="@dimen/xiaomiMyTextSize1" />

                <TextView
                    android:id="@+id/tv_alarm_reset_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6.66dp"
                    android:text="@string/device_alarm_reset_2"
                    android:textColor="@color/txt_grey"
                    android:textSize="@dimen/xiaomiMyTextSize4" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_alarm_reset_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="23.33dp"
                android:src="@drawable/btn_next_selector" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="23.33dp"
            android:layout_marginRight="23.33dp"
            android:background="@color/divider_color" />

        <RelativeLayout
            android:id="@+id/alarm_bells"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/setting_item_selector"
            android:clickable="true"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="23.33dp"
                android:layout_toLeftOf="@+id/iv_alarm_bells_next"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/device_alarm_bells"
                    android:textColor="@color/black"
                    android:textSize="@dimen/xiaomiMyTextSize1" />

                <TextView
                    android:id="@+id/tv_alarm_bells_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6.66dp"
                    android:text="@string/security_default"
                    android:textColor="@color/txt_grey"
                    android:textSize="@dimen/xiaomiMyTextSize4" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_alarm_bells_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="23.33dp"
                android:src="@drawable/btn_next_selector" />
        </RelativeLayout>

        <View
            android:id="@+id/alarm_bells_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="23.33dp"
            android:layout_marginRight="23.33dp"
            android:background="@color/divider_color" />
    </LinearLayout>
</RelativeLayout>
