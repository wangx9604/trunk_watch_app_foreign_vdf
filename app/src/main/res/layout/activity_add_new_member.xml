<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/activity_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/group_member"
        android:textColor="@color/color_7"
        android:textSize="@dimen/xiaomiMyTextSize1" />

    <TextView
        android:id="@+id/tv_add_member_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23.3dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="23.3dp"
        android:layout_marginBottom="5dp"
        android:text="@string/group_member_info"
        android:textColor="@color/color_5"
        android:textSize="@dimen/xiaomiMyTextSize3" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="23.3dp"
        android:layout_marginRight="23.3dp"
        android:src="@color/line_grey" />

    <RelativeLayout
        android:id="@+id/layout_scan_code"
        android:layout_width="match_parent"
        android:layout_height="49.66dp"
        android:layout_marginLeft="23.3dp"
        android:layout_marginRight="23.3dp"
        android:background="@drawable/setting_item_selector">

        <ImageView
            android:id="@+id/iv_scan_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/code" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8.66dp"
            android:layout_toRightOf="@+id/iv_scan_code"
            android:text="@string/scan_code_invite_member"
            android:textColor="@color/color_7"
            android:textSize="@dimen/xiaomiMyTextSize1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_next_selector" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="23.3dp"
        android:layout_marginRight="23.3dp"
        android:src="@color/line_grey" />

    <RelativeLayout
        android:id="@+id/layout_wechat"
        android:layout_width="match_parent"
        android:layout_height="49.66dp"
        android:layout_marginLeft="23.3dp"
        android:layout_marginRight="23.3dp"
        android:background="@drawable/setting_item_selector"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/wechat" />

        <TextView
            android:id="@+id/tv_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8.66dp"
            android:layout_toRightOf="@+id/iv_wechat"
            android:text="@string/wechat_invite_member"
            android:textColor="@color/color_7"
            android:textSize="@dimen/xiaomiMyTextSize1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_next_selector" />

        <View
            android:id="@+id/cover_wechat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="#B2ffffff"
            android:visibility="visible"></View>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="23.3dp"
        android:layout_marginRight="23.3dp"
        android:src="@color/line_grey"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/layout_sms"
        android:layout_width="match_parent"
        android:layout_height="49.66dp"
        android:layout_marginLeft="23.3dp"
        android:layout_marginRight="23.3dp"
        android:background="@drawable/setting_item_selector"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/messages" />

        <TextView
            android:id="@+id/tv_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8.66dp"
            android:layout_toRightOf="@+id/iv_sms"
            android:text="@string/sms_invite_member"
            android:textColor="@color/color_7"
            android:textSize="@dimen/xiaomiMyTextSize1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_next_selector" />

        <View
            android:id="@+id/cover_sms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="#B2ffffff"
            android:visibility="visible"></View>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="23.3dp"
        android:layout_marginRight="23.3dp"
        android:src="@color/line_grey"
        android:visibility="gone" />


    <LinearLayout
        android:id="@+id/layout_call_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/call_member"
            android:textColor="@color/color_7"
            android:textSize="@dimen/xiaomiMyTextSize1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23.3dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="23.3dp"
            android:layout_marginBottom="5dp"
            android:text="@string/call_member_info"
            android:textColor="@color/color_5"
            android:textSize="@dimen/xiaomiMyTextSize3" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="23.3dp"
            android:layout_marginRight="23.3dp"
            android:src="@color/line_grey" />

        <RelativeLayout
            android:id="@+id/layout_add_call_member"
            android:layout_width="match_parent"
            android:layout_height="49.66dp"
            android:layout_marginLeft="23.3dp"
            android:layout_marginRight="23.3dp"
            android:background="@drawable/setting_item_selector">

            <ImageView
                android:id="@+id/iv_add_call_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/add" />

            <TextView
                android:id="@+id/tv_add_call_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8.66dp"
                android:layout_toRightOf="@+id/iv_add_call_member"
                android:text="@string/add_new_member"
                android:textColor="@color/color_7"
                android:textSize="@dimen/xiaomiMyTextSize1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/btn_next_selector" />

            <View
                android:id="@+id/cover_add_call_member"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="#B2ffffff"
                android:visibility="visible"></View>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="23.3dp"
            android:layout_marginRight="23.3dp"
            android:src="@color/line_grey" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_add_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/watch_friend"
            android:textColor="@color/color_7"
            android:textSize="@dimen/xiaomiMyTextSize1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23.3dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="23.3dp"
            android:layout_marginBottom="5dp"
            android:text="@string/watch_friend_info"
            android:textColor="@color/color_5"
            android:textSize="@dimen/xiaomiMyTextSize3" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="23.3dp"
            android:layout_marginRight="23.3dp"
            android:src="@color/line_grey" />

        <RelativeLayout
            android:id="@+id/layout_add_watch_friend"
            android:layout_width="match_parent"
            android:layout_height="49.66dp"
            android:layout_marginLeft="23.3dp"
            android:layout_marginRight="23.3dp"
            android:background="@drawable/setting_item_selector">

            <ImageView
                android:id="@+id/iv_add_watch_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/add_watch_friend" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8.66dp"
                android:layout_toRightOf="@+id/iv_add_watch_friend"
                android:text="@string/add_watch_friend"
                android:textColor="@color/color_7"
                android:textSize="@dimen/xiaomiMyTextSize1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/btn_next_selector" />

            <View
                android:id="@+id/cover_add_watch_friend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="#B2ffffff"
                android:visibility="visible"></View>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="23.3dp"
            android:layout_marginRight="23.3dp"
            android:src="@color/line_grey" />
    </LinearLayout>

</LinearLayout>