<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setting_item_selector"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/watch_mode_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DoubleLineItemHeight"
        android:background="@drawable/setting_item_selector"
        android:clickable="true"
        android:gravity="center"
        android:paddingEnd="@dimen/divideleftandright"
        android:paddingStart="@dimen/divideleftandright">

        <ImageView
            android:id="@+id/iv_select_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/select_2"
            android:focusable="false" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_select_mode"
            android:orientation="vertical">

            <TextView
                android:id="@+id/watch_mode_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/powerSaving_mode_setting"
                android:textColor="@color/black"
                android:textSize="@dimen/xiaomiMyTextSize1" />

            <TextView
                android:id="@+id/watch_mode_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/powerSaving_mode_setting_detail"
                android:textColor="@color/txt_grey"
                android:textSize="@dimen/xiaomiMyTextSize4" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/watch_mode_view"
        android:paddingEnd="@dimen/divideleftandright"
        android:paddingStart="@dimen/divideleftandright"
        android:src="@color/line_grey" />

</RelativeLayout>