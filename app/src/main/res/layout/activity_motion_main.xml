<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".motion.activity.MotionScheduleSettingActivity">

    <include
        android:id="@+id/layout_title"
        layout="@layout/activity_title" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/layout_title">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="12dp"
                android:text="@string/motion_title_0"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="74dp"
                android:layout_height="24dp"
                android:text="@string/modify"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/motion_rect_0_orag"
                android:layout_marginEnd="29dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_title_0"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_func_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_0"
                app:layout_constraintBottom_toBottomOf="@+id/view_divi_zoom"/>
            <TextView
                android:id="@+id/tv_layout_title_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/motion_main_title_1"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@+id/cv_func_1"
                app:layout_constraintTop_toTopOf="@+id/cv_func_1"/>

            <TextView
                android:id="@+id/tv_layout_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#FFFE5D04"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="@+id/cv_func_1"
                app:layout_constraintTop_toTopOf="@+id/cv_func_1"/>

            <com.xiaoxun.xun.motion.views.LayoutStateView
                android:id="@+id/layout_func_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:motion_layout_icon="@drawable/motion_outhome_run"
                app:motion_layout_title="@string/motion_func_1"
                app:motion_layout_state="@string/motion_no_setting"
                app:motion_layout_next="false"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toStartOf="@+id/cv_func_1"
                app:layout_constraintEnd_toEndOf="@+id/cv_func_1"
                app:layout_constraintTop_toBottomOf="@id/tv_layout_title_1"/>

            <com.xiaoxun.xun.motion.views.LayoutStateView
                android:id="@+id/layout_func_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:motion_layout_icon="@drawable/motion_jump"
                app:motion_layout_title="@string/motion_func_2"
                app:motion_layout_state="@string/motion_no_setting"
                app:motion_layout_next="false"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toStartOf="@+id/cv_func_1"
                app:layout_constraintEnd_toEndOf="@+id/cv_func_1"
                app:layout_constraintTop_toBottomOf="@id/layout_func_1"/>

            <com.xiaoxun.xun.motion.views.LayoutStateView
                android:id="@+id/layout_func_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:motion_layout_icon="@drawable/motion_ship"
                app:motion_layout_title="@string/motion_func_3"
                app:motion_layout_state="@string/motion_no_setting"
                app:motion_layout_next="false"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toStartOf="@+id/cv_func_1"
                app:layout_constraintEnd_toEndOf="@+id/cv_func_1"
                app:layout_constraintTop_toBottomOf="@id/layout_func_2"/>

            <com.xiaoxun.xun.motion.views.LayoutStateView
                android:id="@+id/layout_func_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:motion_layout_icon="@drawable/motion_bicycle"
                app:motion_layout_title="@string/motion_func_4"
                app:motion_layout_state="@string/motion_no_setting"
                app:motion_layout_next="false"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toStartOf="@+id/cv_func_1"
                app:layout_constraintEnd_toEndOf="@+id/cv_func_1"
                app:layout_constraintTop_toBottomOf="@id/layout_func_3"/>

            <com.xiaoxun.xun.motion.views.LayoutStateView
                android:id="@+id/layout_func_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:motion_layout_icon="@drawable/motion_moving"
                app:motion_layout_title="@string/motion_func_5"
                app:motion_layout_state="@string/motion_no_setting"
                app:motion_layout_next="false"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toStartOf="@+id/cv_func_1"
                app:layout_constraintEnd_toEndOf="@+id/cv_func_1"
                app:layout_constraintTop_toBottomOf="@id/layout_func_4"/>

            <TextView
                android:id="@+id/tv_layout_title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/motion_main_title_2"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="@+id/cv_func_1"
                app:layout_constraintTop_toBottomOf="@+id/layout_func_5"/>

            <com.xiaoxun.xun.motion.views.SelectStateView
                android:id="@+id/ssv_make_target_0"
                android:layout_width="95dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:text="@string/motion_target_0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                app:motion_select="false"
                app:motion_state="1"
                app:layout_constraintTop_toBottomOf="@+id/tv_layout_title_2"
                app:layout_constraintStart_toStartOf="@+id/cv_func_1"/>

            <com.xiaoxun.xun.motion.views.SelectStateView
                android:id="@+id/ssv_make_target_1"
                android:layout_width="95dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:text="@string/motion_target_1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                app:motion_select="false"
                app:motion_state="1"
                app:layout_constraintTop_toBottomOf="@+id/tv_layout_title_2"
                app:layout_constraintStart_toEndOf="@+id/ssv_make_target_0"/>

            <com.xiaoxun.xun.motion.views.SelectStateView
                android:id="@+id/ssv_make_target_2"
                android:layout_width="95dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:text="@string/motion_target_2"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                app:motion_select="false"
                app:motion_state="1"
                app:layout_constraintTop_toBottomOf="@+id/tv_layout_title_2"
                app:layout_constraintStart_toEndOf="@+id/ssv_make_target_1"/>
            <View
                android:id="@+id/view_divi_zoom"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                app:layout_constraintTop_toBottomOf="@+id/ssv_make_target_0"
                app:layout_constraintStart_toStartOf="@+id/ssv_make_target_0"/>

            <TextView
                android:id="@+id/tv_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:text="@string/motion_title_1"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/cv_func_1"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_func_2"
                android:layout_width="match_parent"
                android:layout_height="224dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_1"/>

            <ImageView
                android:id="@+id/iv_temp_0"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:background="@drawable/motion_guide_0"
                app:layout_constraintTop_toTopOf="@+id/cv_func_2"
                app:layout_constraintStart_toStartOf="@+id/cv_func_2"
                app:layout_constraintEnd_toEndOf="@+id/cv_func_2"/>
            
            
            <View
                android:id="@+id/view_center_flag"
                android:layout_width="2dp"
                android:layout_height="25dp"
                android:background="@color/bg_grey"
                app:layout_constraintTop_toBottomOf="@+id/iv_temp_0"
                app:layout_constraintBottom_toBottomOf="@+id/cv_func_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <View
                android:id="@+id/guide_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/iv_temp_0"
                app:layout_constraintBottom_toBottomOf="@+id/cv_func_2"/>
            <TextView
                android:id="@+id/tv_new_add_vaule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#FE5D04"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/guide_0"
                app:layout_constraintStart_toStartOf="@id/cv_func_2"
                app:layout_constraintEnd_toEndOf="@+id/view_center_flag"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/motion_add_hint"
                android:textColor="#666666"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@+id/guide_0"
                app:layout_constraintStart_toStartOf="@id/cv_func_2"
                app:layout_constraintEnd_toEndOf="@+id/view_center_flag"/>

            <TextView
                android:id="@+id/tv_new_sum_vaule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/guide_0"
                app:layout_constraintStart_toStartOf="@id/view_center_flag"
                app:layout_constraintEnd_toEndOf="@+id/cv_func_2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/motion_sum_hint"
                android:textColor="#666666"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@+id/guide_0"
                app:layout_constraintStart_toStartOf="@id/view_center_flag"
                app:layout_constraintEnd_toEndOf="@+id/cv_func_2"/>


            <TextView
                android:id="@+id/tv_title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:text="@string/motion_title_2"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/cv_func_2"
                app:layout_constraintStart_toStartOf="parent"/>



            <TextView
                android:id="@+id/tv_title_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/motion_title_3"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_3"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>