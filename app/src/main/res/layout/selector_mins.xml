<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto">
	<androidx.cardview.widget.CardView
		android:id="@+id/cardview_week"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="7.5dp"
		android:layout_marginEnd="7.5dp"
		app:cardBackgroundColor="@color/white"
		app:cardCornerRadius="12.5dp"
		app:layout_constraintTop_toTopOf="parent">
		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:id="@+id/tv_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dp"
				android:text="@string/confirm"
				android:textSize="17sp"
				android:textColor="@color/black"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toTopOf="parent"/>

			<TextView
				android:id="@+id/tv_top_cancle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dp"
				android:layout_marginStart="25dp"
				android:text="@string/cancel"
				android:textSize="17sp"
				android:textColor="@color/heart_rate_warning_value"
				android:visibility="gone"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"/>

			<TextView
				android:id="@+id/tv_top_confirm"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dp"
				android:layout_marginEnd="25dp"
				android:text="@string/confirm"
				android:textColor="@color/heart_rate_warning_value"
				android:textSize="17sp"
				android:visibility="gone"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toTopOf="parent" />



			<com.xiaoxun.xun.views.CustomerPickerView
				android:id="@+id/moring_hour_pv"
				android:layout_width="match_parent"
				android:layout_height="120dp"
				android:layout_marginTop="20dp"
				android:layout_marginStart="22.5dp"
				android:layout_marginEnd="22.5dp"
				app:layout_constraintTop_toBottomOf="@+id/tv_title"/>
			<androidx.cardview.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="35dp"
				android:layout_marginStart="22.5dp"
				android:layout_marginEnd="22.5dp"
				app:cardCornerRadius="8dp"
				app:cardElevation="0dp"
				app:cardBackgroundColor="@color/seletor_mins_bg"
				app:layout_constraintTop_toTopOf="@+id/moring_hour_pv"
				app:layout_constraintBottom_toBottomOf="@+id/moring_hour_pv"/>


			<TextView
				android:id="@+id/tv_unit"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/unit_minute"
				android:textSize="16sp"
				android:textColor="@color/black"
				android:layout_marginStart="80dp"
				app:layout_constraintStart_toStartOf="@+id/moring_hour_pv"
				app:layout_constraintEnd_toEndOf="@+id/moring_hour_pv"
				app:layout_constraintTop_toTopOf="@+id/moring_hour_pv"
				app:layout_constraintBottom_toBottomOf="@+id/moring_hour_pv"/>
			<View
				android:layout_width="match_parent"
				android:layout_height="20dp"
				app:layout_constraintTop_toBottomOf="@+id/moring_hour_pv"/>
		</androidx.constraintlayout.widget.ConstraintLayout>
	</androidx.cardview.widget.CardView>
	<androidx.cardview.widget.CardView
		android:id="@+id/cv_layout_bottom"
		android:layout_width="match_parent"
		android:layout_height="55dp"
		android:layout_marginTop="8dp"
		android:layout_marginStart="7.5dp"
		android:layout_marginEnd="7.5dp"
		app:cardBackgroundColor="@color/white"
		app:cardCornerRadius="12.5dp"
		app:layout_constraintTop_toBottomOf="@+id/cardview_week">
		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			<View
				android:id="@+id/view_divi_line"
				android:layout_width="1dp"
				android:layout_height="match_parent"
				android:background="@color/item_grey"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent"/>
			<TextView
				android:id="@+id/tv_cancle"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:text="@string/cancel"
				android:textColor="@color/heart_rate_warning_value"
				android:textSize="19sp"
				android:gravity="center"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="@+id/view_divi_line"/>

			<TextView
				android:id="@+id/tv_confirm"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:text="@string/confirm"
				android:textColor="@color/heart_rate_warning_value"
				android:textSize="19sp"
				android:textStyle="bold"
				android:gravity="center"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="@+id/view_divi_line"/>
		</androidx.constraintlayout.widget.ConstraintLayout>
	</androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

