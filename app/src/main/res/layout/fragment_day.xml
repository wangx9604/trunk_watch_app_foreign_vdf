                        <LinearLayout
                            android:id="@+id/ly_oxy_legend_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="15dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            app:layout_constraintStart_toStartOf="@id/ly_oxy_legend_severe"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/iv_oxy_legend_light"
                                android:layout_width="7dp"
                                android:layout_height="7dp"
                                android:background="@drawable/shape_health_legend_light_yellow" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:text="@string/health_report_oxy_light_detail"
                                android:textColor="@color/alipay_666666"
                                android:textSize="13sp"
                                app:layout_constraintStart_toEndOf="@id/iv_oxy_legend_light"
                                app:layout_constraintTop_toTopOf="parent" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ly_oxy_legend_middle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/ly_oxy_legend_normal">

                            <ImageView
                                android:id="@+id/iv_oxy_legend_middle"
                                android:layout_width="7dp"
                                android:layout_height="7dp"
                                android:background="@drawable/shape_health_legend_orange" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:text="@string/health_report_oxy_middle_detail"
                                android:textColor="@color/alipay_666666"
                                android:textSize="13sp"
                                app:layout_constraintStart_toEndOf="@id/iv_oxy_legend_middle"
                                app:layout_constraintTop_toTopOf="parent" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ly_oxy_legend_severe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="15dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/ly_oxy_legend_middle"
                            app:layout_constraintTop_toBottomOf="@id/ly_oxy_legend_light">

                            <ImageView
                                android:id="@+id/iv_oxy_legend_severe"
                                android:layout_width="7dp"
                                android:layout_height="7dp"
                                android:background="@drawable/shape_health_legend_red" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:text="@string/health_report_oxy_severe_detail"
                                android:textColor="@color/alipay_666666"
                                android:textSize="13sp"
                                app:layout_constraintStart_toEndOf="@id/iv_oxy_legend_severe"
                                app:layout_constraintTop_toTopOf="parent" />
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
