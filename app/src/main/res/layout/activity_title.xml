<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:background="@color/bg_color"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/fragment_title_height"
        android:id="@+id/title_include"
        android:background="@color/bg_color_orange">

        <ImageButton
            android:id="@+id/iv_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="13.3dp"
            android:background="@drawable/btn_title_back_selector" />

        <ImageButton
            android:id="@+id/iv_title_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10.66dp"
            android:background="@drawable/btn_title_back_selector"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/iv_title_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10.66dp"
            android:background="@drawable/return_0"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/ib_help_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10.66dp"
            android:background="@drawable/btn_help_selector"
            android:visibility="invisible" />

        <RelativeLayout
            android:id="@+id/ly_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iv_title_back"
            android:layout_toStartOf="@id/iv_title_menu"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="@dimen/xiaomiMyTextSize1"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1"/>

            <ImageButton
                android:id="@+id/title_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="5.66dp"
                android:layout_toEndOf="@+id/tv_title"
                android:background="@drawable/drop_down_menu"
                android:visibility="gone"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/search_0"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:id="@+id/ly_title_shadow"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/ly_title"
            android:visibility="invisible"/>
    </RelativeLayout>
</LinearLayout>