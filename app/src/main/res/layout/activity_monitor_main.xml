            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="vertical"
                app:cardCornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@+id/cl_monitor_switch">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_heart_monitor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tv_heart_monitor_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="12dp"
                            android:text="@string/health_monitor_heart_monitor_title_allday"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="13dp"
                            android:layout_marginEnd="12dp"
                            android:text="@string/health_monitor_heart_monitor_content_allday"
                            android:textColor="@color/app_score_color"
                            app:layout_constraintEnd_toStartOf="@+id/tb_heart_monitor"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@id/tv_heart_monitor_title"
                            app:layout_constraintTop_toBottomOf="@id/tv_heart_monitor_title" />

                        <ToggleButton
                            android:id="@+id/tb_heart_monitor"
                            android:layout_width="40dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/switch_toggle_selector"
                            android:checked="false"
                            android:textOff="@null"
                            android:textOn="@null"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/line_heart_monitor"
                        app:layout_constraintTop_toBottomOf="@+id/cl_heart_monitor"
                        android:layout_width="match_parent"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:layout_height="1dp"
                        android:background="#EDEDED"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_heart_monitor_schedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="15dp"
                        app:layout_constraintTop_toBottomOf="@+id/line_heart_monitor"
                        android:visibility="visible">


                        <TextView
                            android:id="@+id/tv_heart_monitor_schedule_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="12dp"
                            android:text="@string/health_monitor_heart_monitor_schedule_title"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ToggleButton
                            android:id="@+id/tb_fatigue_monitor"
                            android:layout_width="40dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/switch_toggle_selector"
                            android:checked="false"
                            android:textOff="@null"
                            android:textOn="@null"
