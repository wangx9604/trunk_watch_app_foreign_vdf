<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_6">

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="10dp"
        >
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:layout_weight="1"

           >
           <ImageView
               android:id="@+id/iv_share_weixin"
               android:visibility="visible"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/share_weixin"
               android:layout_centerHorizontal="true"

               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/account_type_weixin"
               android:layout_below="@+id/iv_share_weixin"
               android:layout_marginTop="5dp"
               android:layout_centerHorizontal="true"
               />
       </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/iv_share_pengyouquan"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/share_pengyouquan"
                android:layout_centerHorizontal="true"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pengyouquan"
                android:layout_below="@+id/iv_share_pengyouquan"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"

                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/iv_share_qzone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/share_qzone"
                android:layout_centerHorizontal="true"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/qqkongjian"
                android:layout_below="@+id/iv_share_qzone"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"

                />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>