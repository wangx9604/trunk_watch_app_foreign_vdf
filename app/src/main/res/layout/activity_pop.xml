<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/halftrans">


    <RelativeLayout
        android:id="@+id/layout_set_top_item"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_11"/>

        <ImageButton
            android:id="@+id/btn_set_top"
            android:layout_width="match_parent"
            android:layout_height="49.66dp"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_chat_long_click_item"/>

        <TextView
            android:id="@+id/tv_set_top_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="23.3dp"
            android:text="@string/set_top"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/xiaomiMyTextSize3"/>
    </RelativeLayout>
</RelativeLayout>