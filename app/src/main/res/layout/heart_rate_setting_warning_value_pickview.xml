<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/title_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white">
        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="@string/cancel"
            android:textSize="17sp"
            android:textColor="@color/color_low_content"/>
        <TextView
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textSize="17sp"
            android:textColor="@color/heart_rate_warning_value"
            android:text="@string/confirm"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/value_picker_view"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/title_ly"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/weight_select">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal" >
            <com.xiaoxun.xun.views.CustomerPickerView
                android:id="@+id/value_pv"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="4"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_height_pv"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:gravity="center"
            android:text="@string/str_cm"
            android:textColor="@color/black"
            android:textSize="@dimen/xiaomiMyTextSize7"
            android:visibility="gone"/>
        <View
            android:visibility="gone"
            android:id="@+id/iv_mask_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_hint" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pv_mask">
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>