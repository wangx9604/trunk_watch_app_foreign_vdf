<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/divideleftandright"
        android:layout_marginEnd="@dimen/divideleftandright">


        <TextView
            android:id="@+id/wifi_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/list_item_selector"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="@string/select_wifi_nearby_watch"
            android:textColor="@color/halftrans"
            android:textSize="@dimen/xiaomiMyTextSize1" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_wifi_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/divideleftandright"
        android:layout_marginEnd="@dimen/divideleftandright">

        <ImageView
            android:id="@+id/iv_warning"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="14.5dp"
            android:layout_marginBottom="14.5dp"
            android:src="@drawable/icon_warning_red" />

        <TextView
            android:id="@+id/tv_wifi_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/iv_warning"
            android:background="@drawable/list_item_selector"
            android:textColor="@color/txt_grey"
            android:textSize="@dimen/xiaomiMyTextSize1" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_wifi_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/divideleftandright"
        android:layout_marginEnd="@dimen/divideleftandright"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_device_wifi_strength"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="0dp"
            android:src="@drawable/watch_wifi_2" />


        <TextView
            android:id="@+id/tv_device_wifi_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@+id/iv_device_wifi_free"
            android:layout_weight="1"
            android:background="@drawable/list_item_selector"
            android:maxLines="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:singleLine="true"
            android:text="xiaomi"
            android:textColor="@color/black"
            android:textSize="@dimen/xiaomiMyTextSize1" />

        <ImageView
            android:id="@+id/iv_select_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/select_0"
            android:focusable="false"
            android:visibility="invisible" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/layout_wifi_item"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/divideleftandright"
        android:layout_marginEnd="@dimen/divideleftandright"
        android:src="@color/line_grey" />


</RelativeLayout>