<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/schedule_no_class"
    tools:context=".health.heartratesetting.SettingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/title_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:src="@drawable/title_back_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/health_heartrate_setting"
            android:textColor="@color/true_black"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/health_monitor_help"
            android:layout_marginEnd="10dp"
            android:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/title_ly"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_high_limit_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="13dp"
                    android:layout_marginStart="15dp"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="@string/health_heartrate_setting_high_limit_title"/>
                <TextView
                    android:id="@+id/tv_high_limit_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_high_limit_title"
                    app:layout_constraintStart_toStartOf="@id/tv_high_limit_title"
                    android:layout_marginTop="7dp"
                    android:textSize="14sp"
                    android:textColor="@color/focustime_add_time"
                    android:text="@string/health_heartrate_setting_high_limit_intro"/>
                <View
                    android:id="@+id/v_divide"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    app:layout_constraintTop_toBottomOf="@id/tv_high_limit_intro"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="13dp"
                    android:background="@color/item_grey"/>

                <ToggleButton
                    android:id="@+id/tb_high_limit"
                    android:layout_width="40dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/switch_toggle_selector"
                    android:checked="false"
                    android:textOff="@null"
                    android:textOn="@null"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/v_divide"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/v_divide"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="18dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="18dp"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="@string/health_heartrate_setting_high_limit_set_title"/>

                <ImageView
                    android:id="@+id/iv_high_limit_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/v_divide"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/doorcard_arrow"/>
                <TextView
                    android:id="@+id/tv_high_limit_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/v_divide"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/iv_high_limit_arrow"
                    android:textSize="14sp"
                    android:textColor="@color/focustime_add_time"
                    android:text="@string/heart_rate_warning_value_format"/>
                <androidx.constraintlayout.widget.Group
                    android:id="@+id/group_high_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="iv_high_limit_arrow,tv_high_limit_num"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_rest_limit_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="13dp"
                    android:layout_marginStart="15dp"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="@string/health_heartrate_setting_rest_limit_title"/>
                <TextView
                    android:id="@+id/tv_rest_limit_intro"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_rest_limit_title"
                    app:layout_constraintStart_toStartOf="@id/tv_rest_limit_title"
                    app:layout_constraintEnd_toStartOf="@id/tb_rest_limit"
                    android:layout_marginEnd="26dp"
                    android:layout_marginTop="7dp"
                    android:textSize="14sp"
                    android:textColor="@color/focustime_add_time"
                    android:text="@string/health_heartrate_setting_rest_limit_intro"
                    android:lines="2"/>
                <View
                    android:id="@+id/v_divide1"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    app:layout_constraintTop_toBottomOf="@id/tv_rest_limit_intro"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="13dp"
                    android:background="@color/item_grey"/>

                <ToggleButton
                    android:id="@+id/tb_rest_limit"
                    android:layout_width="40dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/switch_toggle_selector"
                    android:checked="false"
                    android:textOff="@null"
                    android:textOn="@null"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/v_divide1"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/v_divide1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="18dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="18dp"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="@string/health_heartrate_setting_rest_limit_set_title"/>

                <ImageView
                    android:id="@+id/iv_rest_limit_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/v_divide1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/doorcard_arrow"/>
                <TextView
                    android:id="@+id/tv_rest_limit_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/v_divide1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/iv_rest_limit_arrow"
                    android:textSize="14sp"
                    android:textColor="@color/focustime_add_time"
                    android:text="@string/heart_rate_warning_value_format"/>
                <androidx.constraintlayout.widget.Group
                    android:id="@+id/group_rest_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="iv_rest_limit_arrow,tv_rest_limit_num"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_rest_low_limit_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="13dp"
                    android:layout_marginStart="15dp"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="@string/health_heartrate_setting_rest_low_limit_title"/>
                <TextView
                    android:id="@+id/tv_rest_low_limit_intro"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_rest_low_limit_title"
                    app:layout_constraintStart_toStartOf="@id/tv_rest_low_limit_title"
                    app:layout_constraintEnd_toStartOf="@id/tb_rest_low_limit"
                    android:layout_marginEnd="26dp"
                    android:layout_marginTop="7dp"
                    android:textSize="14sp"
                    android:textColor="@color/focustime_add_time"
                    android:text="@string/health_heartrate_setting_rest_low_limit_intro"
                    android:lines="2"/>
                <View
                    android:id="@+id/v_divide2"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    app:layout_constraintTop_toBottomOf="@id/tv_rest_low_limit_intro"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="13dp"
                    android:background="@color/item_grey"/>

                <ToggleButton
                    android:id="@+id/tb_rest_low_limit"
                    android:layout_width="40dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/switch_toggle_selector"
                    android:checked="false"
                    android:textOff="@null"
                    android:textOn="@null"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/v_divide2"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/v_divide2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="18dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="18dp"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="@string/health_heartrate_setting_rest_limit_set_title"/>

                <ImageView
                    android:id="@+id/iv_rest_low_limit_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/v_divide2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/doorcard_arrow"/>
                <TextView
                    android:id="@+id/tv_rest_low_limit_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/v_divide2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/iv_rest_low_limit_arrow"
                    android:textSize="14sp"
                    android:textColor="@color/focustime_add_time"
                    android:text="@string/heart_rate_warning_value_format"/>
                <androidx.constraintlayout.widget.Group
                    android:id="@+id/group_rest_low_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="iv_rest_low_limit_arrow,tv_rest_low_limit_num"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>