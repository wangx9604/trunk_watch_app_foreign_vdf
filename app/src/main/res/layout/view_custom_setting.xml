<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/setting_item_selector"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49.66dp"
        android:background="@drawable/setting_item_selector"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/divideleftandright"
        android:paddingRight="@dimen/divideleftandright">

        <ImageView
            android:id="@+id/setting_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/health_steps" />

        <TextView
            android:id="@+id/setting_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8.66dp"
            android:maxLength="25"
            android:ellipsize="end"
            android:layout_toEndOf="@+id/setting_icon"
            android:text="@string/health_steps"
            android:textColor="@color/color_7"
            android:textSize="@dimen/xiaomiMyTextSize1" />

        <ImageView
            android:id="@+id/iv_red_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="13.33dp"
            android:layout_toEndOf="@+id/setting_text"
            android:src="@drawable/indicator" />

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_next_selector" />

        <TextView
            android:id="@+id/setting_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="end"
            android:maxLength="13"
            android:ellipsize="end"
            android:layout_marginEnd="@dimen/watchSettingState"
            android:layout_toStartOf="@+id/iv_arrow"
            android:text="@string/performance_mode_setting"
            android:layout_toEndOf="@id/setting_text"
            android:layout_marginStart="8.66dp"
            android:textColor="@color/txt_grey"
            android:visibility="visible" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:paddingLeft="@dimen/divideleftandright"
        android:paddingRight="@dimen/divideleftandright"
        android:src="@color/line_grey" />

</LinearLayout>