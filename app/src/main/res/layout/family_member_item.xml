<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/divideleftandright"
    android:paddingRight="@dimen/divideleftandright">

    <RelativeLayout
        android:id="@+id/layer_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:clickable="true"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:text="title"
            android:textColor="@color/txt_grey"
            android:textSize="@dimen/xiaomiMyTextSize4"
            android:visibility="visible" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:src="@color/divider_color" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="@drawable/list_item_selector">

        <ImageView
            android:id="@+id/iv_faimliy_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/blank_str"
            android:src="@drawable/relation_custom" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_toLeftOf="@+id/btn_edit"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_family_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/xiaomiMyTextSize1" />

                <ImageView
                    android:id="@+id/iv_member_type"
                    android:layout_width="47.3dp"
                    android:layout_height="14.7dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12.3dp"
                    android:layout_toRightOf="@+id/tv_family_name"
                    android:src="@drawable/call_member_0" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="name"
                android:textColor="@color/txt_grey"
                android:textSize="@dimen/xiaomiMyTextSize2" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="18.3dp"
            android:layout_height="18.3dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_edit_selector"
            android:textColor="@color/txt_grey" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="1px"
        android:src="@color/divider_color"
        android:visibility="invisible" />
</LinearLayout>