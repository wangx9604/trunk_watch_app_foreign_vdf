<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <com.xiaoxun.xun.views.scrollContainer
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <com.xiaoxun.xun.views.myHScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/te03"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/call_number"
                    android:textSize="@dimen/xiaomiMyTextSize12"
                    android:textColor="@color/txt_grey"/>

                <TextView
                    android:id="@+id/te04"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/call_time"
                    android:textSize="@dimen/xiaomiMyTextSize12"
                    android:textColor="@color/txt_grey"/>

                <TextView
                    android:id="@+id/te05"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/call_duration"
                    android:textSize="@dimen/xiaomiMyTextSize12"
                    android:textColor="@color/txt_grey"/>

                <TextView
                    android:id="@+id/te06"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/call_type"
                    android:textSize="@dimen/xiaomiMyTextSize12"
                    android:textColor="@color/txt_grey"/>

                <TextView
                    android:id="@+id/te07"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/call_cost"
                    android:textSize="@dimen/xiaomiMyTextSize12"
                    android:textColor="@color/txt_grey"/>
            </LinearLayout>
        </com.xiaoxun.xun.views.myHScrollView>
    </com.xiaoxun.xun.views.scrollContainer>

</LinearLayout>