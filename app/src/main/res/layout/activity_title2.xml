<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_title_height"
        android:id="@+id/title_include">


        <TextView
            android:id="@+id/iv_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10.66dp"
            android:clickable="true"
            android:text="@string/cancel"
            android:paddingTop="@dimen/dimen5"
            android:paddingBottom="@dimen/dimen5"
            android:paddingEnd="10dp"
            android:textSize="@dimen/xiaomiMyTextSize9"
            android:textColor="@drawable/btn_title_text_selector" />



        <TextView
            android:id="@+id/iv_title_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10.66dp"
            android:clickable="true"
            android:text="@string/confirm"
            android:paddingTop="@dimen/dimen5"
            android:paddingBottom="@dimen/dimen5"
            android:paddingStart="10dp"
            android:textSize="@dimen/xiaomiMyTextSize9"
            android:textColor="@drawable/btn_title_text_selector"
            android:visibility="invisible" />


        <RelativeLayout
            android:id="@+id/ly_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/color_tile_content"
                android:textSize="@dimen/xiaomiMyTextSize1"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/title_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5.66dp"
                android:layout_toEndOf="@+id/tv_title"
                android:background="@drawable/drop_down_menu"
                android:visibility="gone"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/search_0"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:id="@+id/ly_title_shadow"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/ly_title"
            android:visibility="invisible"/>
    </RelativeLayout>
</LinearLayout>