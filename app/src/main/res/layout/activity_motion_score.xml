<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".motion.activity.MotionScoreActivity">
    <include
        android:id="@+id/layout_title"
        layout="@layout/activity_title" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_layout_0"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_title"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_score_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@+id/cv_layout_0"
        app:layout_constraintEnd_toEndOf="@+id/cv_layout_0"
        app:layout_constraintTop_toTopOf="@+id/cv_layout_0"
        app:layout_constraintBottom_toBottomOf="@+id/cv_layout_0"/>


</androidx.constraintlayout.widget.ConstraintLayout>