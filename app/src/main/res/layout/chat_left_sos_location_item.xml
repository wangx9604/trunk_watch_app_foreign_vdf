<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/send_time"
        android:layout_width="311.33dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="18.66dp"
        android:layout_marginBottom="10.33dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/chat_send_time"
            android:background="@color/chat_item_text" />

        <TextView
            android:id="@+id/chat_send_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:text="nihao"
            android:textColor="@color/m_a_spliter_line"
            android:textSize="@dimen/xiaomiMyTextSize7" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/chat_send_time"
            android:background="@color/chat_item_text" />
    </RelativeLayout>

    <TextView
        android:id="@+id/notify_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="9.33dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/color_5"
        android:textSize="@dimen/xiaomiMyTextSize4" />

</LinearLayout>