<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xiaomi_bg_grey"
    android:orientation="vertical">

    <include
        android:id="@+id/silence_time_title"
        layout="@layout/activity_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/silence_time_title"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/silence_week_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DoubleLineItemHeight"
            android:background="@drawable/setting_item_selector"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="23.33dp"
                android:layout_toStartOf="@+id/silence_view_next"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/silence_week"
                    android:textColor="@color/black"
                    android:textSize="@dimen/xiaomiMyTextNickname" />

                <TextView
                    android:id="@+id/silence_week_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/silence_week_click_select"
                    android:textColor="@color/txt_grey"
                    android:textSize="@dimen/xiaomiMyTextSize3" />
            </LinearLayout>

            <ImageView
                android:id="@+id/silence_view_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="23.33dp"
                android:src="@drawable/btn_next_selector" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="23.33dp"
            android:layout_marginRight="23.33dp"
            android:background="@color/divider_color" />

        <RelativeLayout
            android:id="@+id/silence_start_time_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DoubleLineItemHeight"
            android:background="@drawable/setting_item_selector"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_select_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:src="@drawable/day_select"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="23.33dp"
                android:layout_toStartOf="@+id/silence_start_time_next"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/silence_startime_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_time"
                    android:textColor="@color/black"
                    android:textSize="@dimen/xiaomiMyTextNickname" />

                <TextView
                    android:id="@+id/silence_startime_title_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_time"
                    android:textColor="@color/txt_grey"
                    android:textSize="@dimen/xiaomiMyTextSize3" />
            </LinearLayout>

            <ImageView
                android:id="@+id/silence_start_time_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="23.33dp"
                android:src="@drawable/btn_next_selector" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="23.33dp"
            android:layout_marginRight="23.33dp"
            android:background="@color/divider_color" />

        <RelativeLayout
            android:id="@+id/silence_end_time_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DoubleLineItemHeight"
            android:background="@drawable/setting_item_selector"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_select_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:src="@drawable/day_select"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="23.33dp"
                android:layout_toStartOf="@+id/silence_end_time_next"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/silence_endtime_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/end_time"
                    android:textColor="@color/black"
                    android:textSize="@dimen/xiaomiMyTextNickname" />

                <TextView
                    android:id="@+id/silence_endtime_title_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/end_time"
                    android:textColor="@color/txt_grey"
                    android:textSize="@dimen/xiaomiMyTextSize3" />
            </LinearLayout>

            <ImageView
                android:id="@+id/silence_end_time_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="23.33dp"
                android:src="@drawable/btn_next_selector" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="23.33dp"
            android:layout_marginRight="23.33dp"
            android:background="@color/divider_color" />

        <RelativeLayout
            android:id="@+id/silence_advance_op"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DoubleLineItemHeight"
            android:background="@drawable/setting_item_selector"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="23.33dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/silence_advance_op_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/silence_advance_op" />

                <ImageView
                    android:id="@+id/opt_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="21.33dp"
                    android:background="@drawable/radio_bt_0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/silence_advance_op_title"
                    android:layout_toStartOf="@id/opt_select"
                    android:text="@string/silence_advance_op_desc"
                    android:textColor="@color/txt_grey"
                    android:textSize="@dimen/xiaomiMyTextSize3" />

            </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/silence_advance_op_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="23.33dp"
            android:layout_marginRight="23.33dp"
            android:background="@color/divider_color" />

    </LinearLayout>
</RelativeLayout>
